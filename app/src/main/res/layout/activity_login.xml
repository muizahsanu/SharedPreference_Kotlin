<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#3498BD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp">
<!--    Header    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight=".5">
            <ImageView
                android:id="@+id/iv_login_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_child_friendly">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGASUH"
                android:textSize="24sp"
                android:textStyle="italic"
                android:textColor="#f3f3f3"
                android:layout_marginTop="8dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siap Menjadi Orangtua Muda"
                android:textSize="16sp"
                android:textColor="#f3f3f3"
                android:layout_marginTop="8dp">
            </TextView>
        </LinearLayout>
<!--    End Header    -->

<!--    Body    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="20sp"
                android:textColor="#f3f3f3"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/et_username_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#f3f3f3"
                android:hint="Username"
                android:textColor="#f3f3f3"
                android:textColorHint="#f3f3f3"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </EditText>
            <EditText
                android:id="@+id/et_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#f3f3f3"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#f3f3f3"
                android:textColor="#f3f3f3"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/et_username_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lupa Password?"
                android:textAlignment="textEnd"
                android:textColor="#f3f3f3"
                android:textSize="16sp"
                android:layout_marginTop="18dp">
            </TextView>
        </LinearLayout>
<!--    End Body    -->

<!--    Footer    -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:gravity="center|bottom"
            android:paddingBottom="24dp">
            <Button
                android:id="@+id/btn_masuk_login"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/btn_rounded"
                android:text="Masuk"
                android:textStyle="bold"
                android:textColor="#fefefe"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </Button>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum punya akun? Yuk"
                    android:textColor="#f3f3f3"
                    android:textSize="16sp">
                </TextView>
                <TextView
                    android:id="@+id/tv_daftar_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Daftar"
                    android:textColor="#f3f3f3"
                    android:textSize="16sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
<!--    End Footer    -->
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>